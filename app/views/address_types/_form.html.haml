= form_for @address_type do |f|
  - if @address_type.errors.any?
    #error_explanation
      %h2= "#{pluralize(@address_type.errors.count, "error")} prohibited this address_type from being saved:"
      %ul
        - @address_type.errors.full_messages.each do |msg|
          %li= msg

  .field
