= form_for @customer_address do |f|
  - if @customer_address.errors.any?
    #error_explanation
      %h2= "#{pluralize(@customer_address.errors.count, "error")} prohibited this customer_address from being saved:"
      %ul
        - @customer_address.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :line_one
    = f.text_field :line_one
  .field
    = f.label :line_two
    = f.text_field :line_two
  .field
    = f.label :suite
    = f.text_field :suite
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :state
    = f.text_field :state
  .field
    = f.label :zip
    = f.text_field :zip
  .actions
    = f.submit 'Save'
