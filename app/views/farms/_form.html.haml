= form_for @farm do |f|
  - if @farm.errors.any?
    #error_explanation
      %h2= "#{pluralize(@farm.errors.count, "error")} prohibited this farm from being saved:"
      %ul
        - @farm.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :address
    = f.number_field :address
  .field
    = f.label :contact
    = f.text_field :contact
  .actions
    = f.submit 'Save'
