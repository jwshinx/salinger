#scan_column
 = render 'shared/sidebar_menu'
#content
 %h1 Listing farms

 %table
  %tr
   %th Name
   %th Address
   %th Contact
   - if can? :read, Farm
    %th
   - if can? :read, Farm
    %th
    %th

 - @farms.each do |farm|
  %tr
   %td= farm.name
   %td= farm.address
   %td= farm.contact
   - if can? :read, Farm
    %td= link_to 'Show', farm
   - if can? :update, Farm
    %td= link_to 'Edit', edit_farm_path(farm)
   - if can? :destroy, Farm
    %td= link_to 'Destroy', farm, :method => :delete, :data => { :confirm => 'Are you sure?' }

 %br
  - if can? :create, Farm
   = link_to 'New Farm', new_farm_path
