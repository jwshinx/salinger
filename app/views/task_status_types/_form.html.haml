= form_for @task_status_type, :html => {:id => 'new_task_status_type_form'} do |f|
  - if @task_status_type.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task_status_type.errors.count, "error")} prohibited this task status type from being saved:"
      %ul
        - @task_status_type.errors.full_messages.each do |msg|
          %li= msg

  .field
    .width_medium
      = f.label :name
    = f.text_field :name
  .field
    .width_medium
      = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'
