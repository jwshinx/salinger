= form_for @order_line_item do |f|
  - if @order_line_item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@order_line_item.errors.count, "error")} prohibited this order_line_item from being saved:"
      %ul
        - @order_line_item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :date
    = f.date_select :date
  .field
    = f.label :quantity
    = f.number_field :quantity
  .field
    = f.label :price
    = f.number_field :price
  .field
    = f.label :subtotal
    = f.number_field :subtotal
  .field
    = f.label :order_id
    = f.number_field :order_id
  .actions
    = f.submit 'Save'
