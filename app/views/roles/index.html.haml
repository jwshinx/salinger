#scan_column
 = render 'shared/sidebar_menu'
#content
 = render 'sienna' 
 %h1= and_show_count_of @roles
 - unless @roles.empty?
  %table
   %tr
    %th Name
    %th Description
    %th
    %th
    %th
  
   - @roles.each do |role|
    %tr
     %td= role.name
     %td= role.description
     %td
      - if can? :read, Role
       = link_to 'Show', role
     %td
      - if can? :edit, Role
       = link_to 'Edit', edit_role_path(role)
     %td
      - if can? :destroy, Role
       = link_to 'Destroy', role, :method => :delete, :data => { :confirm => 'Are you sure?' }
  
  %br
  - if can? :create, Role
   = link_to 'New Role', new_role_path
