= form_for @customer do |f|
 - if @customer.errors.any?
  = render :partial => 'shared/error_explanation', :object => @customer, :as => :object

 .field
  = f.label :firstname
  = f.text_field :firstname
 .field
  = f.label :lastname
  = f.text_field :lastname
 .field
  = f.label :email
  = f.text_field :email
 .field
  = f.label :description
  = f.text_field :description
 .actions
  = f.submit 'Save'
