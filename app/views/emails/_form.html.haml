= form_for @email do |f|
  - if @email.errors.any?
    #error_explanation
      %h2= "#{pluralize(@email.errors.count, "error")} prohibited this email from being saved:"
      %ul
        - @email.errors.full_messages.each do |msg|
          %li= msg

  .field
    .width_medium
      = f.label :content
    = f.text_field :content
  .field
    .width_medium
      = f.label :email_type_id
    = f.number_field :email_type_id
  .field
    .width_medium
      = f.label :created_by
    = f.number_field :created_by
  .field
    .width_medium
      = f.label :updated_by
    = f.number_field :updated_by
  .actions
    = f.submit 'Save'
