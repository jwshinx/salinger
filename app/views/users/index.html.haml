#scan_column
 %h2 Actions 
 %ul
  %li= link_to 'Scarves', products_path
  %li= link_to 'Roles', roles_path
  %li= link_to 'Users', users_path
#content
 %h1 Listing users
 
 %p#notice= notice
 
 %table
  %tr
   %th Username
   %th Email
   %th Active
   %th Role
   %th
   %th
   %th
 
  - @users.each do |user|
   %tr
    %td= user.username
    %td= user.email
    %td= user.active
    %td= user.role.name
    %td
     - if can? :read, User
      = link_to 'Show', user
    %td
     - if(can? :edit, user) && (user != current_user)
      = link_to 'Edit', edit_user_path(user)
    %td
     - if can? :destroy, User
      = link_to 'Destroy', user, :method => :delete, :data => { :confirm => 'Are you sure?' }
 
 %br
 - if can? :create, User
  = link_to 'New User', new_user_path
